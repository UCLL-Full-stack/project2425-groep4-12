generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    userId          Int         @id @default(autoincrement())
    username        String      @unique
    firstName       String      
    lastName        String      
    password        String      
    role            Role        
    attendance      Int         
}

model Match {
    matchId         Int         @id @default(autoincrement())
    date            DateTime    
    hall            Int         
    square          Int         
    players         User[]      
}

model Team {
    teamId          Int         @id @default(autoincrement())
    members         User[]      
    coach           User        
}

model Training {
    trainingId      Int         @id @default(autoincrement())
    date            DateTime    
    hall            Int         
    square          Int         
    players         User[]      
    coach           User
}