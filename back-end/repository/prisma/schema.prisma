generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  firstName String
  lastName  String
  email     String    @unique
  password  String
  role      String
  coach     Coach?
  player    Player?
}

model Coach {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  rank      String
  userId    Int        @unique
  user      User       @relation(fields: [userId], references: [id])
  schedule  Event[]
  teams     Team[]
}

model Player {
  id            Int        @id @default(autoincrement())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  playernumber  String     @unique
  userId        Int        @unique
  user          User       @relation(fields: [userId], references: [id])
  teams         Team[]
}

model Event {
  id          Int        @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  name        String
  description String
  location    String
  start       DateTime
  end         DateTime
  teams       Team[]
  coaches     Coach[]
}

model Team {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  name       String
  coach      Coach     @relation(fields: [coachId], references: [id])
  coachId    Int
  players    Player[]
  schedule   Event[]
}

